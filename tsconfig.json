{
  "compilerOptions": {
    "moduleDetection": "force",
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "types": ["node", "jest"]
  },
  "include": ["src"]
}
